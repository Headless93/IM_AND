<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:statusBarColor">#383838</item>-->
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    </style>
    <style name="AppTheme.NoActionBar.Main">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NIMPPTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- toolbar（actionbar）背景颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 底部导航栏的颜色 -->
    </style>

    <style name="image_dialog" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>