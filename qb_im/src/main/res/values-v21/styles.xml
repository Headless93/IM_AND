<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:statusBarColor">#383838</item>-->
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    </style>
    <style name="AppTheme.NoActionBar.Main">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listDivider">@drawable/nim_divider</item>
        <!--<item name="android:statusBarColor">#000000</item>-->

    </style>

    <style name="NIMPPTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- toolbar（actionbar）背景颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 底部导航栏的颜色 -->
        <item name="android:navigationBarColor">@color/nim_pp_navigationBarColor</item>
    </style>

    <style name="NIM_ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="image_dialog" parent="@android:style/Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:background">@color/white_text_color</item>
    </style>

</resources>