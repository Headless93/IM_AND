<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="16dp"
    android:background="@drawable/nim_layout_selector"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="60dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/map_address_item_title"
            android:text="张江高科"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/map_address_item_detail"
            android:text="矽岸国际"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColor="#999999"
            android:maxLines="1"
            android:ellipsize="middle"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/map_address_item_radio"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/nim_icon_map_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:background="#cfc8c8"
        android:layout_height="1px"/>
</RelativeLayout>